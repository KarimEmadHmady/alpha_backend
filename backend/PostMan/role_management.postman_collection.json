        "item": [
          {
            "name": "Change user role to manager",
            "request": {
              "method": "PUT",
              "header": [
                { "key": "Authorization", "value": "Bearer {{token}}" },
                { "key": "Content-Type", "value": "application/json" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"role\": \"manager\"\n}"
              },
              "url": {
                "raw": "{{base_url}}/users/role/1",
                "host": [
                  "{{base_url}}"
                ],
                "path": [
                  "users",
                  "role",
                  "1"
                ]
              }
            },
            "response": []
          },
