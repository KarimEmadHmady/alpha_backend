            "path": ["api", "funds", "approved"],
            "query": [
              { "key": "page", "value": "1" }
            ]
          }
        },
        "response": []
      },
      {
        "name": "Get Fund Details by ID",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "{{base_url}}/api/funds/1",
            "host": ["{{base_url}}"],
            "path": ["api", "funds", "1"]
          }
        },
        "response": []
      }
    ],
    "variable": [
      { "key": "base_url", "value": "http://localhost:5000" },
      { "key": "token", "value": "" }
    ]
  }
